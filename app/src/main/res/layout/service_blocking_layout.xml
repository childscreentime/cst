<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/graphic_2d_colorful_wallpaper_with_grainy_gradients"
    android:fitsSystemWindows="true">

    <!-- Simple toolbar replacement (no Material Design components) -->
    <LinearLayout
        android:id="@+id/toolbar_area"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="#3F51B5"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kid Screen Lock"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Content area that mimics the nav host fragment -->
    <FrameLayout
        android:id="@+id/content_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_area">

        <!-- This is where we'll programmatically add the FirstFragment layout -->
        
    </FrameLayout>

    <!-- FAB replacement using regular button -->
    <ImageButton
        android:id="@+id/fab"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/fab_background"
        android:src="@android:drawable/ic_menu_preferences"
        android:contentDescription="Settings"
        android:elevation="6dp" />

</RelativeLayout>
